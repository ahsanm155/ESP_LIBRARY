<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ivtick"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_50sdp"
        android:src="@drawable/esp_lib_drawable_success_tick" />


    <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
        android:id="@+id/txtmessage"
        style="@style/Esp_Lib_Style_TextHeading1White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivtick"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_30sdp"
        android:text="@string/esp_lib_text_defaultt" />


    <com.esp.library.utilities.customcontrols.ESP_LIB_CustomButton
        android:id="@+id/btok"
        style="@style/Esp_Lib_Style_TextHeading3Green"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_20sdp"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/esp_lib_drawable_draw_bg_green_stroke"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/esp_lib_text_ok"
        android:textAllCaps="true" />
</RelativeLayout>