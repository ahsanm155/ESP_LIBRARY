<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@null"
     >

    <LinearLayout
        android:id="@+id/lookup_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:padding="@dimen/margin_15dp"


        >

        <ImageView
            android:id="@+id/cross_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/esp_lib_drawable_ic_icons_controls_radio_unchecked"
            android:layout_gravity="top"/>

        <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
            android:id="@+id/lookup_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/Esp_Lib_Style_TextParagraphGray"
            android:layout_marginStart="@dimen/_13sdp"
            android:gravity="start"

            />



    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/esp_lib_color_cooltwogrey"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        ></RelativeLayout>



</LinearLayout>

				