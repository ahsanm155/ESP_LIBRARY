<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/esp_lib_color_bgcolor">


    <include layout="@layout/esp_lib_gradienttoolbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/esp_lib_color_white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@drawable/esp_lib_drawable_draw_toolbar"></ImageView>
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rlclick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_13sdp"
                android:background="@android:color/white"
                android:elevation="@dimen/_5sdp"
                android:layout_margin="@dimen/_10sdp"
                android:foreground="?attr/selectableItemBackground">


                    <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                        android:id="@+id/etxtmysignature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:text="@string/esp_lib_text_mysignature"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/ivarrow"
                        style="@style/Esp_Lib_Style_TextHeading3BlackHeavy"/>


                    <ImageView
                        android:id="@+id/ivarrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:tint="@color/esp_lib_color_grey"
                        android:src="@drawable/ic_arrow_right" />


            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>