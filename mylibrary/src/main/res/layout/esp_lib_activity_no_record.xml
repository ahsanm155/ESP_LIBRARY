<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/no_application_available_div"
        android:orientation="horizontal">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llcontents"
            android:layout_margin="@dimen/_20sdp"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/ivnorecordinside"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_no_record_icon" />

            <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                android:id="@+id/txtnoapplicationadded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivnorecordinside"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                style="@style/Esp_Lib_Style_TextHeading5Gray"/>

            <ImageView
                android:id="@+id/ivnorecordoutside"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_toStartOf="@+id/detail_text"
                android:layout_below="@+id/txtnoapplicationadded"
                android:src="@drawable/ic_no_record_icon" />

            <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                android:id="@+id/detail_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:paddingStart="@dimen/_10sdp"
                android:layout_below="@+id/txtnoapplicationadded"
                android:layout_centerHorizontal="true"
                style="@style/Esp_Lib_Style_TextHeading5Gray" />


        </RelativeLayout>

        <com.esp.library.utilities.customcontrols.ESP_LIB_CustomButton
            android:id="@+id/add_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:visibility="gone"
            android:text="@string/esp_lib_text_explore_services"
            android:layout_below="@+id/llcontents"
            android:background="@drawable/esp_lib_drawable_draw_bg_green"
            android:textAllCaps="false"
            android:gravity="center_horizontal|center_vertical"
            style="@style/Esp_Lib_Style_TextHeading3WhiteHeavy"/>
    </RelativeLayout>
</LinearLayout>