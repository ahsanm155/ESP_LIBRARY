<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/esp_lib_color_bgcolor"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/esp_lib_drawable_draw_bg_white"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:layout_height="@dimen/_45sdp">

                <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                    android:id="@+id/submissionallowedtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/esp_lib_text_submissions"
                    android:layout_centerVertical="true"
                    style="@style/Esp_Lib_Style_TextHeading3BlackHeavy"/>


                <ImageView
                    android:id="@+id/ivsubmissionoptions"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:visibility="gone"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/esp_lib_drawable_vertical_dots"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />

               <!-- <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchsubmissionallow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:theme="@style/Esp_Lib_Style_SCBSwitch"
                    android:layout_alignParentEnd="true" />-->


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/esp_lib_color_very_light_grey_dim"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                    android:id="@+id/txtalllabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/esp_lib_text_all_colon"
                    android:layout_centerVertical="true"
                    style="@style/Esp_Lib_Style_TextParagraphCoolGray"/>


                <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                    android:id="@+id/txtallvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/txtalllabel"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_centerVertical="true"
                    style="@style/Esp_Lib_Style_TextParagraphBlack"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp">


                <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                    android:id="@+id/txtpendinglabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/esp_lib_text_opencolon"
                    android:layout_centerVertical="true"
                    style="@style/Esp_Lib_Style_TextParagraphCoolGray"/>


                <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                    android:id="@+id/txtpendingvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/txtpendinglabel"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_centerVertical="true"
                    style="@style/Esp_Lib_Style_TextParagraphBlack"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp">


                <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                    android:id="@+id/txtacceptedlabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/esp_lib_text_accepted_colon"
                    android:layout_centerVertical="true"
                    style="@style/Esp_Lib_Style_TextParagraphCoolGray"/>


                <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                    android:id="@+id/txtacceptedvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/txtacceptedlabel"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_centerVertical="true"
                    style="@style/Esp_Lib_Style_TextParagraphBlack"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp">


                <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                    android:id="@+id/txtrejectedlabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/esp_lib_text_rejected_colon"
                    android:layout_centerVertical="true"
                    style="@style/Esp_Lib_Style_TextParagraphCoolGray"/>


                <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                    android:id="@+id/txtrejectedvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/txtrejectedlabel"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_centerVertical="true"
                    style="@style/Esp_Lib_Style_TextParagraphBlack"/>

            </RelativeLayout>


        </LinearLayout>
        </LinearLayout>


</LinearLayout>