<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/esp_lib_color_bgcolor"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/esp_lib_drawable_draw_bg_white"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_45sdp">

                <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                    android:id="@+id/submissionallowedtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/esp_lib_text_stopsubmission"
                    android:layout_centerVertical="true"
                    style="@style/Esp_Lib_Style_TextHeading3BlackHeavy"/>


                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchsubmissionallow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:theme="@style/Esp_Lib_Style_SCBSwitch"
                    android:layout_alignParentEnd="true" />


            </RelativeLayout>
        </LinearLayout>



</LinearLayout>