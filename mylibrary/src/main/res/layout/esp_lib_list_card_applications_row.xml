<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_9sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_9sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/esp_lib_color_white" />

            <View
                android:id="@+id/voverduedot"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/esp_lib_drawable_draw_orange"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cards"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?attr/selectableItemBackground"
            android:background="@color/esp_lib_color_white">

            <TextView
                android:id="@+id/viewfeed"
                android:layout_alignParentStart="true"
                android:layout_width="@dimen/_2sdp"
                android:background="@color/esp_lib_color_yellowishOrange"
                android:layout_height="match_parent"/>

            <RelativeLayout
                android:id="@+id/rlfeedcard"
                android:layout_width="match_parent"
                android:layout_toEndOf="@+id/view"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_15sdp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                            android:id="@+id/txtfeedvalue"
                            style="@style/Esp_Lib_Style_TextHeading2OrangeHeavy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/esp_lib_text_feed" />

                        <ImageView
                            android:id="@+id/ivcircledot"
                            android:layout_width="@dimen/_3sdp"
                            android:layout_height="@dimen/_3sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_toEndOf="@+id/txtfeedvalue"
                            android:src="@drawable/esp_lib_drawable_circle_grey_shape"/>

                        <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                            android:id="@+id/txtsubmissionvalue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4 submissions"
                            android:layout_toEndOf="@+id/ivcircledot"
                            style="@style/Esp_Lib_Style_TextParagraph1CoolGray" />

                    </RelativeLayout>

                    <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                        android:id="@+id/definitionName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        style="@style/Esp_Lib_Style_TextHeading3Black"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp">

                        <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                            android:id="@+id/txtrequestedby"
                            style="@style/Esp_Lib_Style_TextParagraphCoolGray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/esp_lib_text_requestedby" />

                        <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                            android:id="@+id/txtrequestedbyvalue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/txtrequestedby"
                            style="@style/Esp_Lib_Style_TextParagraphBlack" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rlrequestedon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                            android:id="@+id/startedOntext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/esp_lib_text_requestedoncolon"
                            android:textColor="@color/esp_lib_color_coolgrey"
                            style="@style/Esp_Lib_Style_TextParagraphCoolGray"/>

                        <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                            android:id="@+id/startedOn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/startedOntext"
                            style="@style/Esp_Lib_Style_TextParagraphBlack"/>


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rlcategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                            android:id="@+id/requesttext"
                            style="@style/Esp_Lib_Style_TextParagraphCoolGray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/esp_lib_text_requestnumber"
                            android:textColor="@color/esp_lib_color_coolgrey" />

                        <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                            android:id="@+id/requestnumvalue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/requesttext"
                            style="@style/Esp_Lib_Style_TextParagraphBlack"/>


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/llOLA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp">

                        <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                            android:id="@+id/txtola"
                            style="@style/Esp_Lib_Style_TextParagraphCoolGray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/esp_lib_text_ola" />

                        <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                            android:id="@+id/txtolavalue"
                            style="@style/Esp_Lib_Style_TextParagraphBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/txtola" />

                        <!-- <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                            android:id="@+id/txtstatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:layout_alignParentEnd="true"
                            style="@style/Esp_Lib_Style_TextLinkBlue"/>-->

                        <include
                            layout="@layout/esp_lib_statuswithicon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end"
                            android:layout_marginBottom="@dimen/_12sdp"
                            android:maxWidth="@dimen/_80sdp"
                            android:visibility="gone" />


                    </RelativeLayout>





                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/status_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:visibility="gone"
                        android:layout_marginBottom="@dimen/_minus2sdp"
                        android:animationCache="true"
                        android:clipToPadding="false" />

                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/llcardButtons"
                android:layout_width="match_parent"
                android:layout_below="@+id/rlfeedcard"
                android:layout_toEndOf="@+id/viewfeed"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/esp_lib_color_silver"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="@android:color/white"
                    android:layout_height="wrap_content">


                <com.esp.library.utilities.customcontrols.ESP_LIB_CustomButton
                    android:id="@+id/btreject"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAllCaps="false"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@android:color/white"
                    style="@style/Esp_Lib_Style_TextHeading5Gray"
                    android:text="@string/esp_lib_text_dismiss"/>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/esp_lib_color_silver"/>

                <com.esp.library.utilities.customcontrols.ESP_LIB_CustomButton
                    android:id="@+id/btviewdetails"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAllCaps="false"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@android:color/white"
                    style="@style/Esp_Lib_Style_TextHeading5Green"
                    android:text="@string/esp_lib_text_view_details"/>

            </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>