<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@null"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/esp_lib_color_white"
        app:cardCornerRadius="3sp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/margin_5dp"
            android:paddingEnd="@dimen/margin_5dp"
            >


                <ImageButton
                    android:id="@+id/ibRemoveCard"
                    style="?actionButtonStyle"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="end"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/esp_lib_drawable_ic_more_options"
                    android:visibility="visible" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingStart="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_8dp"

                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                        android:id="@+id/category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/esp_lib_color_light_grey"

                        android:textSize="@dimen/text_14"
                        custom:customfont="regular"
                        android:layout_weight="1"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end|top"
                    android:layout_marginEnd="@dimen/margin_5dp"
                    >
                    <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                        android:id="@+id/startedOn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""

                        custom:customfont="regular"
                        android:textColor="@color/esp_lib_color_light_grey"
                        android:textSize="@dimen/text_12"
                        android:layout_marginEnd="@dimen/margin_5dp"




                        />

                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="@dimen/margin_5dp"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/margin_5dp"
                    >
                    <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                        android:id="@+id/definitionName"
                        android:layout_width="wrap_content"
                        custom:customfont="regular"
                        android:layout_height="wrap_content"
                        android:textColor="@color/esp_lib_color_dark_grey"
                        android:textSize="@dimen/text_18"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_alignParentStart="true"
                        />


                    <ImageView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_card_status"
                        />

                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                android:background="@color/esp_lib_color_very_light_grey"
                android:layout_marginTop="@dimen/margin_10dp"

                >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="@dimen/margin_8dp"
                android:paddingTop="@dimen/margin_5dp"
                android:paddingBottom="@dimen/margin_5dp"
                >




                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2"

                    >

                    <ImageView
                        android:id="@+id/ivapplicantimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_card_owner"
                        />

                    <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                        android:id="@+id/applicant_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/esp_lib_color_dark_grey"
                        android:textSize="@dimen/text_12"
                        custom:customfont="regular"
                        android:gravity="start|center_vertical"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end|center"
                    >


                    <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                        android:id="@+id/applicationNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/esp_lib_color_dark_grey"
                        android:textSize="@dimen/text_12"
                        custom:customfont="regular"
                        android:gravity="start"

                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_card_request_num"
                        />

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>


</androidx.cardview.widget.CardView>
</RelativeLayout>
