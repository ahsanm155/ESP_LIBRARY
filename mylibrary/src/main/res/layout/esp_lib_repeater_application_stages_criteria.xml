<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@null"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="@dimen/margin_10dp"
            android:paddingEnd="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center"
                android:paddingTop="@dimen/margin_10dp"

                >
                <RelativeLayout
                    android:id="@+id/status_dot"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@null"
                    ></RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                        android:id="@+id/criteria_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text=""
                        custom:customfont="regular"
                        android:textColor="@color/esp_lib_color_dark_grey"
                        android:textSize="@dimen/text_18"
                        android:gravity="start"
                        android:layout_marginStart="@dimen/margin_5dp"
                        />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="@dimen/margin_5dp"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center"


                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_card_duration"
                    />
                <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                    android:id="@+id/days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/esp_lib_color_dark_grey"
                    android:textSize="@dimen/text_12"
                    android:gravity="start"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|start"
                android:layout_weight="2"
                android:layout_marginStart="@dimen/margin_5dp"


                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_card_owner" />
                <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                    android:id="@+id/criteria_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/esp_lib_color_dark_grey"
                    android:textSize="@dimen/text_12"
                    android:gravity="start"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|start"
                >


                <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/esp_lib_color_light_grey"
                    android:textSize="@dimen/text_12"
                    android:layout_weight="1"
                    custom:customfont="regular"
                    android:gravity="center|start"

                    />

                <ImageButton
                    android:id="@+id/add_criteria_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_card_respond"
                    android:background="@null"
                    android:visibility="gone"
                    android:gravity="center|start"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end|center"
                >

            <ImageButton
                    android:id="@+id/add_criteria_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_card_commented"
                    android:background="@null"
                    />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:background="@color/esp_lib_color_very_light_grey"
        android:layout_marginTop="@dimen/margin_10dp"
        >
    </LinearLayout>
</LinearLayout>
