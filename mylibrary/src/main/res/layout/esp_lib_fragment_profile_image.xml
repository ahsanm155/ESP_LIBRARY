<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/esp_lib_color_pale_grey"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rltoolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/esp_lib_drawable_draw_bg_simple_green">



        <ImageView
            android:id="@+id/ivback"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:tint="@color/esp_lib_color_white"
            android:layout_marginTop="@dimen/_22sdp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/esp_lib_drawable_ic_arrow_nav_back" />

        <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_22sdp"
            android:text="@string/esp_lib_text_profile"
            style="@style/Esp_Lib_Style_TextHeading3White" />


    </RelativeLayout>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/esp_lib_color_white"
            android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:src="@drawable/esp_lib_drawable_draw_toolbar"></ImageView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/esp_lib_color_white"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/_15sdp"
        android:paddingBottom="@dimen/_15sdp"
        android:paddingStart="@dimen/_17sdp"
        android:paddingEnd="@dimen/_20sdp">


        <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
            android:id="@+id/etxtusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_alignParentStart="true"
            android:maxWidth="@dimen/_230sdp"
            style="@style/Esp_Lib_Style_TextHeading1Black"/>

        <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
            android:id="@+id/txtemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/etxtusername"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:text="@string/esp_lib_text_emailcolon"
            android:maxWidth="@dimen/_45sdp"
            style="@style/Esp_Lib_Style_TextParagraphGray" />

        <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
            android:id="@+id/etxtemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/etxtusername"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toEndOf="@+id/txtemail"
            android:layout_marginStart="@dimen/_5sdp"
            android:maxWidth="@dimen/_180sdp"
            style="@style/Esp_Lib_Style_TextParagraphBlack"/>


        <com.esp.library.utilities.common.ESP_LIB_RoundedImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/esp_lib_drawable_circular_bordershape"
            android:src="@drawable/esp_lib_drawable_camera" />


        <ImageView
            android:id="@+id/ivimage"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            android:layout_marginStart="@dimen/_minus25sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_toEndOf="@+id/profile_image"
            android:src="@drawable/ic_profile_camera" />


    </RelativeLayout>

            <com.esp.library.utilities.customcontrols.ESP_LIB_CustomButton
                android:id="@+id/idenedi_login_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/esp_lib_drawable_idenedibuttonselector"
                android:text="@string/esp_lib_text_logineithidenedi"
                android:textAllCaps="false"
                android:textColor="@color/esp_lib_color_white"
                android:textSize="@dimen/_14ssp"
                custom:customfont="regular"

                />

            <RelativeLayout
                android:id="@+id/rlidenedikey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/ivlogo"
                    android:layout_width="@dimen/_11sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/esp_lib_drawable_ic_idendei"/>

            <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                android:id="@+id/etxtidenediID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ivlogo"
                android:text="dasdasd"
                style="@style/Esp_Lib_Style_TextSmallGray"/>


            </RelativeLayout>

        </LinearLayout>




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/app_list_sections"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_7sdp"
        android:clipToPadding="false">

    </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
</LinearLayout>