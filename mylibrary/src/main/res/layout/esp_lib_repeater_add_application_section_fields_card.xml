<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:id="@+id/llparentlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/esp_lib_color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >


            <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                android:id="@+id/tvSectionSubHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:text="@string/esp_lib_text_defaultt"
                style="@style/Esp_Lib_Style_TextSubHeaderGray" />


            <ImageButton
                android:id="@+id/ibRemoveCard"
                style="?actionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                android:background="@android:color/transparent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_11sdp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/esp_lib_drawable_ic_vertical_dots"
                android:visibility="visible" />


        </RelativeLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFields"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_13sdp"
            android:animationCache="true"
            android:clipToPadding="false"
            android:keepScreenOn="true" />

    </LinearLayout>


</LinearLayout>
