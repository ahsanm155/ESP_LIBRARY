<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rlcommentlayout"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
        android:id="@+id/txtcommentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/esp_lib_text_comment"
        style="@style/Esp_Lib_Style_TextParagraph1CoolGray" />


    <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
        android:id="@+id/txtvisibletoapplicant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/_3sdp"
        android:text="@string/esp_lib_text_visible_to_applicant"
        android:visibility="gone"
        style="@style/Esp_Lib_Style_TextParagraph1Green" />

    <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
        android:id="@+id/txtcomment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dasdasda"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_below="@+id/txtcommentTitle"
        style="@style/Esp_Lib_Style_TextHeading5Black"/>


        <LinearLayout
            android:id="@+id/llattachmentlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_below="@+id/txtcomment"
            android:orientation="vertical">


            <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/esp_lib_text_attached_files"
                style="@style/Esp_Lib_Style_TextParagraph1CoolGray" />


            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                layout="@layout/esp_lib_activity_attachment_row"/>


        </LinearLayout>



    </RelativeLayout>

</LinearLayout>