<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/esp_lib_color_white">


        <RelativeLayout
            android:id="@+id/rlsection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:visibility="gone">




            <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                android:id="@+id/field_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:textAllCaps="true"
                android:textColor="@color/esp_lib_color_cooltwogrey"
                android:textSize="@dimen/_11ssp"
                custom:customfont="regular" />


        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/esp_lib_color_pale_grey"
        android:layout_marginStart="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        android:orientation="vertical">


    <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
        android:id="@+id/field_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/esp_lib_color_cooltwogrey"
        android:textSize="@dimen/_11ssp"
        android:paddingStart="@dimen/_12sdp"
        android:paddingTop="@dimen/_5sdp"
        custom:customfont="regular" />

        <LinearLayout
            android:id="@+id/lllayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp">


                <ImageView
                    android:id="@+id/is_file_downloaded"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:src="@drawable/ic_download_file"
                    android:visibility="gone"

                    />

                <ProgressBar
                    android:id="@+id/progressbar"
                    style="@style/Esp_Lib_Style_MyRoundProgressBar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/margin_5dp"
                    android:indeterminate="true"
                    android:visibility="gone" />

                <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                    android:id="@+id/field_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:textColor="@color/esp_lib_color_black"
                    android:textSize="@dimen/_13ssp"
                    custom:customfont="light" />


                <ImageView
                    android:id="@+id/ivicon"
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_toEndOf="@+id/field_value"
                    android:src="@drawable/esp_lib_drawable_ic_show_calculated"
                    android:visibility="gone" />

                <!--<HorizontalScrollView
                    android:id="@+id/dynamic_fields_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/dynamic_fields_div"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"></LinearLayout>


                </HorizontalScrollView>-->

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>