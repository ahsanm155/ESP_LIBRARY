<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/margin_10dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_5sdp">


        <ImageButton
            android:id="@+id/ibRemoveCard"
            style="?actionButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:contentDescription="@string/app_name"
            android:src="@drawable/esp_lib_drawable_ic_more_options"
            android:visibility="visible" />


        <LinearLayout
            android:id="@+id/llbasicinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:visibility="gone">

            <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                android:id="@+id/tNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLength="1000"
                style="@style/Esp_Lib_Style_TextSmallGray" />

            <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                android:id="@+id/tNameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:inputType="textMultiLine"
                android:maxLength="1000"
                style="@style/Esp_Lib_Style_TextHeading5Black" />

            <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                android:id="@+id/tEmailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_11sdp"
                android:inputType="textMultiLine"
                android:maxLength="1000"
                style="@style/Esp_Lib_Style_TextSmallGray" />

            <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                android:id="@+id/tEmailValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:inputType="textMultiLine"
                android:maxLength="1000"
                style="@style/Esp_Lib_Style_TextHeading5Black" />

            <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                android:id="@+id/tProfileTypeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_11sdp"
                android:inputType="textMultiLine"
                android:maxLength="1000"
                style="@style/Esp_Lib_Style_TextSmallGray" />

            <com.esp.library.utilities.customcontrols.ESP_LIB_BodyText
                android:id="@+id/tProfileTypeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:inputType="textMultiLine"
                android:maxLength="1000"
                style="@style/Esp_Lib_Style_TextHeading5Black" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFields"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_11sdp"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_13sdp"
            android:animationCache="true"
            android:clipToPadding="false"
            android:keepScreenOn="true" />

    </LinearLayout>
    <View
        android:id="@+id/dividerview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_7sdp"
        android:visibility="gone"
        android:background="@color/esp_lib_color_very_light_grey_bg"/>

</LinearLayout>
