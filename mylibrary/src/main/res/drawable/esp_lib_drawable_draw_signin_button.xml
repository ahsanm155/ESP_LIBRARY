<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><shape>
        <solid android:color="@color/esp_lib_color_button_start" />
        <stroke android:width="1dp"
            android:color="@color/esp_lib_color_button_start" />
        <corners android:radius="50dp" />

        <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
    </shape></item>

    <item><shape>
        <gradient android:angle="180" android:endColor="@color/esp_lib_color_button_start" android:startColor="@color/esp_lib_color_button_end" />
        <stroke android:width="1dp" android:color="@color/esp_lib_color_button_start" />
        <corners android:radius="40dp" />
        />
        <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
    </shape></item>
</selector>