<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><shape>
        <solid android:color="@color/esp_lib_color_white" />
        <stroke android:width="1dp"
            android:color="@color/esp_lib_color_white" />
        <corners android:radius="3dp" />

        <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
    </shape></item>

    <item><shape>
        <gradient android:angle="270" android:endColor="@color/esp_lib_color_white" android:startColor="@color/esp_lib_color_white" />
        <stroke android:width="0dp" android:color="@color/esp_lib_color_white" />
        <corners android:radius="3dp" />
        />
        <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
    </shape></item>
</selector>