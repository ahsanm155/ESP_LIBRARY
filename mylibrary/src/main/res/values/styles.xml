<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="ESP_LIB_Styles_AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Esp_Lib_Style_Transparent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
    </style>


    <style name="Esp_Lib_Style_ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:minHeight">@null</item>
        <item name="android:background">@drawable/esp_lib_drawable_draw_bg_simple_green</item>
        <item name="android:layout_marginStart">@dimen/_minus12sdp</item>
        <item name="android:layout_height">@dimen/_60sdp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Esp_Lib_Style_ToolbarCurveStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:minHeight">@null</item>
        <item name="android:background">@drawable/esp_lib_drawable_toolbar_curver</item>
        <item name="android:layout_marginStart">@dimen/_minus12sdp</item>
        <item name="android:layout_height">@dimen/_65sdp</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="Esp_Lib_Style_MyTheme.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ESP_LIB_Styles_AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/esp_lib_color_white</item>
        <item name="colorPrimaryDark">@color/esp_lib_color_white</item>
    </style>

    <style name="Esp_Lib_Style_AppTheme.ActionBar" parent="Base.Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/esp_lib_color_white</item>
        <item name="colorPrimaryDark">@color/esp_lib_color_white</item>
    </style>

    <style name="Esp_Lib_Style_NavigationDrawerStyle">
        <item name="android:textSize">@dimen/text_14</item><!-- text size in menu-->
        <item name="android:textColor">@color/esp_lib_color_white</item><!-- text size in menu-->
        <item name="android:textColorSecondary">@color/esp_lib_color_white</item>
        <item name="android:layout_gravity">center_horizontal</item>

    </style>


    <style name="Esp_Lib_Style_MyProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint" tools:ignore="NewApi">
            @color/esp_lib_color_white
        </item>
        <item name="android:progressTint" tools:ignore="NewApi">@color/esp_lib_color_black</item>
    </style>

    <style name="Esp_Lib_Style_MyRoundProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:progressBackgroundTint" tools:ignore="NewApi">@color/colorPrimary</item>
        <item name="android:progressTint" tools:ignore="NewApi">@color/colorPrimary</item>
    </style>

    <style name="Esp_Lib_Style_fileChooserName">
        <item name="android:drawablePadding">@dimen/list_item_padding</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingLeft">@dimen/list_item_padding</item>
        <item name="android:paddingRight">@dimen/list_item_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="Esp_Lib_Style_AddApplicationEditTextField" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/esp_lib_color_very_light_grey</item>
    </style>

    <style name="Esp_Lib_Style_error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/esp_lib_color_status_rejected</item>
    </style>

    <style name="Esp_Lib_Style_AddApplicationTextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColor">@color/esp_lib_color_idenedicolor</item>
    </style>

    <style name="Esp_Lib_Style_RequestTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorTextAppearance">@style/Esp_Lib_Style_EditTextErrorTextAppearance</item>
        <item name="boxStrokeColor">?attr/colorPrimaryDark</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="Esp_Lib_Style_EditTextErrorTextAppearance">
        <item name="android:textColor">@color/esp_lib_color_status_rejected</item>

    </style>

    <style name="Esp_Lib_Style_AddApplicationEditTextError" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Esp_Lib_Style_SpinnerTheme" parent="android:Widget.DeviceDefault.Spinner">
        <item name="android:background">@drawable/esp_lib_drawable_spinnerarroq</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
    </style>

    <style name="Esp_Lib_Style_SCBSwitch" parent="Theme.MaterialComponents.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimary</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/esp_lib_color_very_light_grey</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/esp_lib_color_light_grey</item>
    </style>

    <style name="Esp_Lib_Style_AlertDialogTheme">
        <item name="buttonBarPositiveButtonStyle">@style/Esp_Lib_Style_Alert.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Esp_Lib_Style_Alert.Button.Neutral</item>
    </style>

    <style name="WideDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="Esp_Lib_Style_Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Esp_Lib_Style_Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/esp_lib_color_status_rejected</item>
    </style>


    <!-- Set parent theme as app theme. -->
    <style name="ESP_LIB_DialogTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

