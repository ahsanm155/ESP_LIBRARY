            android:name="com.esp.library.exceedersesp.controllers.Profile.ESP_LIB_SectionDetailScreen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name="com.esp.library.exceedersesp.controllers.feedback.ESP_LIB_FeedbackForm"
            android:screenOrientation="portrait"
            android:theme="@style/Esp_Lib_Style_Transparent"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name="com.esp.library.exceedersesp.controllers.Profile.ESP_LIB_EditSectionDetails"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name="com.esp.library.exceedersesp.controllers.applications.ESP_LIB_AssessorApplicationStagesCeriteriaCommentsScreenActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name="com.esp.library.exceedersesp.controllers.applications.filters.ESP_LIB_FilterScreenActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name="com.esp.library.exceedersesp.controllers.applications.ESP_LIB_AddApplicationsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustPan" />

        <activity
            android:name="com.esp.library.exceedersesp.controllers.applications.ESP_LIB_AddApplicationsFromScreenActivity"
            android:screenOrientation="portrait"
